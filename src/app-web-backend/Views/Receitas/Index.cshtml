@model IEnumerable<app_web_backend.Models.Receita>

@{
    ViewData["Title"] = "Index";
}

<h1>Todas as Receitas</h1>

<form asp-controller="Receitas" asp-action="Index" method="get">
    <br />
    <p>
        Ingrediente: <input type="text" name="stringDeBusca" style="width:20%"/>
        <input type="submit" value="Buscar" class="btn btn-primary" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IngredientePrincipal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoPreparo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModoPreparo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <!--
    <th>
        @Html.DisplayNameFor(model => model.ContadorFavoritos)
    </th>
        -->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientePrincipal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoPreparo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModoPreparo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <!--
                <td>
                @Html.DisplayFor(modelItem => item.ContadorFavoritos)
                </td>
            -->
            <td>

                <a asp-action="Details" asp-route-id="@item.Codigo">Detalhar</a>

            </td>
        </tr>
}
    </tbody>
</table>
