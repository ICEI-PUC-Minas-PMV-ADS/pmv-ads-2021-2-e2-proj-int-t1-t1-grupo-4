@model app_web_backend.Models.Receita

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar receita</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />

            <div class="col-md-10">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome da receita</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IngredientePrincipal" class="control-label">Ingredientes</label>
                    <textarea asp-for="IngredientePrincipal" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="IngredientePrincipal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ModoPreparo" class="control-label"></label>
                    <textarea asp-for="ModoPreparo" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="ModoPreparo" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="TempoPreparo" class="control-label"></label>
                    <input asp-for="TempoPreparo" class="form-control" />
                    <span asp-validation-for="TempoPreparo" class="text-danger"></span>
                </div>
            </div>
